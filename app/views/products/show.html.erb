<h1>Product Name: <%= @product.title%></h1>
<p>Description: <%= @product.description%></p>
<p>Price: <%= @product.price %></p>
<p>Sales Price: <%= @product.sales_price%></p>
<p>created at: <%= @product.created_at%></p>

<% if can?(:manage, @product) %>
    <%= link_to "Delete", show_product_path(@product.id), method: :delete, data:{confirm: "Do you want to delete this product?"}%>
    <%= link_to "Edit", edit_product_path(@product)%>
<% end %>


<hr/>

<%= form_with(model: [@product, @review], local: true) do |r| %>
    <% if @review.errors.any? %>
        <ul>
            <% @review.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <div>
        <%= r.label :body%>
        <%= r.text_area :body, placeholder: "How did you like this product?" %>
    </div>
    <div>
        <%= r.label :rating%>
        <%= r.text_field :rating, placeholder: "i.e. 1-5" %>
    </div>
    <%= r.submit%>
<% end %>

<hr/>

<div>
    <ul>

        <% if can?(:manage, @product) %>
            <% @reviews.each do |r| %>
                <li>Review: <%= r.body %></li>
                <li>Rating: <%= r.rating %></li>
                <% if can?(:manage, r) %>
                    <%= link_to "Delete", product_review_path(@product.id,r.id), method: :delete, data: {confirm: "Are you sure?"} %>
                <% end %>
                <% if can?(:manage, r) || can?(:manage, @product) %>
                    <% if r.hidden == false %>
                        <%= link_to "Hide", product_hidden_path(@product.id, r.id), method: :patch %>
                    <% else %>
                        <%= link_to "Show", product_hidden_path(@product.id, r.id), method: :patch %>
                    <% end %>
                <% end %>
                <hr>
            <% end %>
        <% else %>
            <% @reviews.each do |r| %>
                <ul>
                    <% if r.hidden == false %>
                        <li>Review: <%= r.body %></li>
                        <li>Rating: <%= r.rating %></li>
                        <% if can?(:manage, r)%>
                            <%= link_to "Delete", product_review_path(@product.id,r.id), method: :delete, data: {confirm: "Are you sure?"} %>
                            <hr>
                        <% end %>    
                    <% end %>    
                </ul>   
            <% end %>    
        <% end %>


    </ul>
</div>
